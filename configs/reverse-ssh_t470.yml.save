---
http:
  routers:

    t470:
       entrypoints:
         - web
       rule: HostRegexp(`^.*\.t470\..+`)
       service: t470
       middlewares:
#         - t470-redirect
    t470-secure:
      entrypoints:
        -  websecure
      rule: HostRegexp(`^.*\.t470\..+`)
      tls:
#       certresolver: letsencrypt
      service: t470-secure
      middlewares:
#        - secHeaders
#        - t470-secure-redirect

  services:
    t470:
      loadBalancer:
        servers:
          - url: "localhost:1280"
    t470-secure:
      loadBalancer:
        servers:
          - url: "localhost:12443"
